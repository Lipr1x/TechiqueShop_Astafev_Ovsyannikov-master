<Window x:Class="TechiqueShopViewCustomer.OrderForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechiqueShopViewCustomer"
        mc:Ignorable="d"
        Title="Заказы" Height="350" Width="450">
    <Grid>
        <DataGrid x:Name="ordersGrid" Width="310" HorizontalAlignment="Left">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding OrderName}" Header="Название" Width="170"/>
                <DataGridTextColumn Binding="{Binding Price}" Header="Цена" Width="130"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel HorizontalAlignment="Right" Width="90" Margin="20" Orientation="Vertical">
            <Button x:Name="createButton" Content="Создать" Margin="0 0 0 10" Click="createButton_Click" />
            <Button x:Name="changeButton" Content="Изменить" Margin="0 0 0 10" Click="changeButton_Click" />
            <Button x:Name="updateButton" Content="Обновить" Margin="0 0 0 10" Click="updateButton_Click" />
            <Button x:Name="deleteButton" Content="Удалить" Margin="0 0 0 10" Click="deleteButton_Click" />
        </StackPanel>

    </Grid>
</Window>
