<Window x:Class="TechiqueShopViewCustomer.CreateOrderForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechiqueShopViewCustomer"
        mc:Ignorable="d"
        Title="Формирование заказа" Height="132" Width="258">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="Название:" MinWidth="55px" Margin="0 0 5 0" TextAlignment="Right"/>
                <TextBox Name="name" MaxLength="30" MinWidth="150"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                <TextBlock Text="Цена:" MinWidth="55px" Margin="0 0 5 0" TextAlignment="Right"/>
                <TextBox Name="price" MinWidth="150"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Click="Save_button" Margin="3" Content="Сохранить"></Button>
                <Button Click="Close_button" IsCancel="True" Margin="3" Content="Отменить"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
